<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %>
    <%= form.text_area :question %>
  </div>

  <div class="field">
    <%= form.label "Multiple choice 1" %>
    <%= form.text_area :choice1 %>
  </div>

  <div class="field">
    <%= form.label "Multiple choice 2" %>
    <%= form.text_area :choice2 %>
  </div>

  <div class="field">
    <%= form.label "Multiple choice 3" %>
    <%= form.text_area :choice3 %>
  </div>

  <div class="field">
    <%= form.label "Multiple choice 4" %>
    <%= form.text_area :choice4 %>
  </div>

  <div class="field">
    <%= form.label :answer %>
    <%= form.number_field(:answer, in: 1..4, step: 1) %>
    <%#= form.number_field :answer %>
  </div>

  <div class="field">
    <%= form.label :explanation %>
    <%= form.text_area :explanation %>
  </div>

  <div class="field">
    <%= form.label :report %>
    <%= form.check_box :report %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
